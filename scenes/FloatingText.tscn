[sub_resource type="GDScript" id="GDScript_j73c7"]
script/source = "extends Label

@export var float_distance := 30.0
@export var duration := 0.8

func play(text_to_show: String, world_pos: Vector2) -> void:
	text = text_to_show
	global_position = world_pos

	# Start fully visible
	modulate.a = 1.0

	var tween = create_tween()
	tween.tween_property(self, \"global_position\", global_position + Vector2(0, -float_distance), duration)
	tween.parallel().tween_property(self, \"modulate:a\", 0.0, duration)
	tween.tween_callback(queue_free)
"

